<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/background">

    <!-- 세로 길이의 60%만 스크롤뷰로 사용(숫자 눌렀을 때 결과값 부분) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_margin="15dp"
        android:background="@drawable/baseball"
        android:id="@+id/scroll_view">

        <!--선택한 숫자에 대한 결과값-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2B2B2B"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="#99FFFFFF"
            android:id="@+id/result_text_view"/>
    </ScrollView>

    <!-- 숫자 선택시 어느 숫자를 택했는지 보여주는 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_2"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="2"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="3"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="4"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="5"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_5"/>

        <!--선택한 숫자 취소하는 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/back_space_button"
            android:src="@drawable/ic_backspace_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="6"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="7"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_7"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="8"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="9"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_9"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/num_button_0"/>

        <!--선택한 숫자 취소하는 버튼-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/hit_button"
            android:src="@drawable/ic_check_circle_24dp"
            android:scaleType="centerInside"/>
    </LinearLayout>


</LinearLayout>